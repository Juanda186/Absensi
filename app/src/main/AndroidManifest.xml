<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destinyapp.absensi">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.TambahActivity"
            android:screenOrientation="landscape"></activity>
        <activity android:name=".Activity.TambahKaryawan"
            />
        <activity
            android:name=".Activity.AbsensiActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.AbsenActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.DataKaryawanActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.DataAbsensiActivity"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.RegisterActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppThemeNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>